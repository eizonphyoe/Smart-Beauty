<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.smartbeauty.ucsm.smartbeauty.activity.MainActivity"
    android:background="#508d38c9"
    android:weightSum="6">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbarMain"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>
        <ViewFlipper
            android:id="@+id/flipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:flipInterval="2000"
            android:layout_centerInParent="true"
            android:inAnimation="@android:anim/slide_in_left"
            android:outAnimation="@android:anim/slide_out_right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="6dp"
            android:paddingBottom="7dp"
            android:layout_weight="4"
            android:background="@drawable/first_activity_imageborder">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/lip"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/boy"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/eyeliner"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/blusher"
                android:id="@+id/imageView" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/eyebrow"
                android:id="@+id/imageView2"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/girl"
                android:id="@+id/imageView3"/>

        </ViewFlipper>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/smart"
            android:layout_weight="1"
            android:layout_marginBottom="50dp"/>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/row1"
        android:layout_weight="1">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boy"
            android:src="@drawable/boy2"
            android:layout_weight="0.1"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/girl2"
            android:id="@+id/girl"
            android:layout_weight="0.1"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"/>

    </TableRow>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Touch here....."
        android:textSize="20dp"
        android:textColor="#000"
        android:textAlignment="center"/>
</TableLayout>